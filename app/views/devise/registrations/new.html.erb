<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-login-signup'}) do |f| %>
      <h2 class="form-signin-heading">Ingresar</h2>
      <label for="inputEmail" class="sr-only">Email</label>
      <%= f.email_field :email, autofocus: true, :type => 'email', :id => 'inputEmail', :class => 'form-control', :placeholder => 'E-mail', :required => 'Email requerido' %>
      <label for="inputPassword" class="sr-only">Contraseña</label>
      <%= f.password_field :password, autocomplete: "off", :type => 'password', :id => 'inputPassword', :class => 'form-control', :placeholder => 'Contraseña', :required => 'Contraseña requerido' %>
      <label for="inputPassword" class="sr-only">Confirmar Contraseña</label>
      <%= f.password_field :password_confirmation, autocomplete: "off", :type => 'password', :id => 'inputPassword', :class => 'form-control', :placeholder => 'Contraseña', :required => 'Confirmar contraseña requerido' %>      
      <%= f.submit "Registrarme", :class => 'btn btn-lg btn-primary btn-block' %>
  <% end %>  
</div>



 