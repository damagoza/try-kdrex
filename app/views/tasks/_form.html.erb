<div class="container">
  <h4 style="text-align: center;">Tareas del proyecto <b><%= @project.name%></b>

  </h4> 
  <h4 style="text-align: center;">Administrado por <b><%= @project.user.email%></b>
    
  </h4>   

  <h4 style="text-align: center;">Fecha de inicio <b><%= @project.start_project%> </b> Fecha de finalización <b><%= @project.end_project%></b>
    
  </h4>     

  <p style="text-align: left;"><%= @project.description%>
    
  </p>     
  <hr>
   <%= form_for(@task, :html => {:class => 'form-app'}) do |f| %>
    <%= f.hidden_field :project_id, :value => @project.id %>
   <div class="form-group">
    <label for="name" class="sr-only">Email</label>
    <%= f.text_field :name, autofocus: true, :type => 'text', :id => 'inputEmail', :class => 'form-control', :placeholder => 'Nombre de la tarea', :required => 'Nombre requerido' %>        
  </div>

  <div class="form-group">
    <input type="text" class="form-control" value="Nombre del proyecto: <%= @project.name%>" disabled></input>
  </div>  
  <div class="form-group">
    Asignar a: <%= f.select :user_id, User.all.map{|u| [u.email, u.id]}, :class => 'form-control', :placeholder => 'Nombre de la tarea', :required => 'Usuario requerido' %>        
  </div>
  <div class="form-group">
    <p class="form-group">Fecha de inicio actual de la tarea: <%= @task.start_task%></p>  
    <div class='input-group date' id='start_task'>
      <%= f.text_field :start_task, :id => 'start_task', :class => 'datepicker form-control', :placeholder => 'Fecha de inicio del proyecto' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <div class="form-group">
    <p class="form-group">Fecha de finalzación actual de la tarea: <%= @task.end_task%></p>  
    <div class='input-group date' id='end_task'>
      <%= f.text_field :end_task, :class => 'datepicker form-control', :placeholder => 'Fecha de finalzación del proyecto' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>
  <div class="form-group">
    <h3 for="comment">Descripción:</h3>
    <%= f.text_area :description, :size => "0x10", autofocus: true, :type => 'text', :id => 'description', :class => 'form-control', :placeholder => 'Breve Descripcioón del proyecto', :required => 'Nombre requerido'%>        
  </div>

  <%= f.submit "Crear tarea", :class => 'btn btn-success' %>
  <% end %>  
</div>
<script type="text/javascript">
  $(function () {
    $('#start_task').datetimepicker();
    $('#end_task').datetimepicker();
  });
  $( document ).ready(function() {
    
});
</script>

